<Window x:Class="Tiny_Kitchen_Application.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiny_Kitchen_Application"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="450"
        Background="#3A6A59">
    <Grid>
        <Label Content="Settings" FontFamily="Verdana" FontSize="30" FontWeight="Medium" Margin="0,10,154,0" Foreground="#D6C18A" Height="46" VerticalAlignment="Top" HorizontalAlignment="Right" Width="142"/>
        <TextBox Margin="0,92,0,0" TextWrapping="Wrap" x:Name="email" Text="{Binding Path = email}" Height="22" VerticalAlignment="Top" HorizontalAlignment="Center" Width="274"/>
        <Button Content="Save"  Margin="0,138,0,0" Width="74" Height="22" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Label Content="Email:" Margin="0,86,355,0" FontFamily="Verdana" FontSize="15" HorizontalAlignment="Right" Width="85" Height="34" VerticalAlignment="Top"/>
    </Grid>
</Window>
