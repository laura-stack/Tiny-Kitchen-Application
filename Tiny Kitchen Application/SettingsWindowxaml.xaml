<Window x:Class="Tiny_Kitchen_Application.SettingsWindowxaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiny_Kitchen_Application"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="450"
        Background="#3A6A59">
    <Grid>
        <Label Content="Settings" FontFamily="Verdana" FontSize="30" FontWeight="Medium" Margin="154,10,154,378" Foreground="#D6C18A" d:LayoutOverrides="HorizontalAlignment"/>
        <TextBox Margin="0,92,0,0" TextWrapping="Wrap" x:Name="email" Text="{Binding Path = email}" Height="22" VerticalAlignment="Top" HorizontalAlignment="Center" Width="274"/>
        <Button Content="Save" Click="SaveButton_Click" Margin="0,0,10,320" HorizontalAlignment="Right" Width="74" Height="22" VerticalAlignment="Bottom"/>



    </Grid>
</Window>
