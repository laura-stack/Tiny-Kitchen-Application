<Window x:Class="Tiny_Kitchen_Application.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Tiny Kitchen Application" Height="300" Width="300"
  Background="Black">
    <!-- Buttons arranged vertically inside a StackPanel. -->
    <StackPanel>
        <Button
            
            x:Name = "Add_a_Recipe"
            Width= "95"
            Click ="RecipeButton_Click" Height="30" RenderTransformOrigin="0.5, 0.5" FontFamily="Verdana">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Label Content="Add a Recipe"/>
        </Button>
        <Button Content="Search Recipes"/>
        <Button Content="Pantry Stock"/>
        <Button Content="Help"/>
        <Button Content="Settings"/>

    </StackPanel>

</Window>
