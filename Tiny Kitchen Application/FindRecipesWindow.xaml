<Window x:Class="Tiny_Kitchen_Application.FindRecipesWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiny_Kitchen_Application"
        mc:Ignorable="d"
        Title="CollectionsWindow" Height="450" Width="450"
        Background="#3A6A59">

    <Grid>
        <Button Content="Search" HorizontalAlignment="Left" Height="26" Margin="303,29,0,0" VerticalAlignment="Top" Width="127" Click="initiateSearch"/>
        <CheckBox Content="Vegan" HorizontalAlignment="Left" Height="21" Margin="303,62,0,0" VerticalAlignment="Top" Width="76" Checked="Vegan_CheckBox_Checked" Unchecked="Vegan_CheckBox_Unchecked"/>
        <TextBox Text="{Binding Path=userQuery, UpdateSourceTrigger=PropertyChanged}" 
            x:Name="Inputquery"
            HorizontalAlignment="Left" Height="22" Margin="22,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
    </Grid>
</Window>
